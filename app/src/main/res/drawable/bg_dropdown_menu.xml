<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hintergrund des Spinners -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Hintergrundebene der Karte -->
            <corners android:radius="10dp" /> <!-- Abgerundete Ecken -->
            <solid android:color="@color/pure_white" />
            <stroke android:color="@color/border_dark_gray" android:width="1dp" />
        </shape>
    </item>

    <!-- Pfeil rechts -->
    <item android:drawable="@drawable/ic_arrow_down_black" android:gravity="end|center_vertical" />
</layer-list>
