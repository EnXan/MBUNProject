<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_routine_less_round"
    android:clipToPadding="false"
    android:elevation="4dp"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp"
    >

    <!-- Horizontales Layout für Text und Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Vertikales Layout für Titel und Kategorie -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/routine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Routinenname"
                android:textColor="@color/text_foreground_light"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/routine_rhythm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rhythmus"
                android:textColor="@color/text_background_light"
                android:textSize="13sp" />


        </LinearLayout>

        <ImageButton
            android:id="@+id/button_link_routine"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_arrow_right_teal"
            />
    </LinearLayout>


</LinearLayout>
