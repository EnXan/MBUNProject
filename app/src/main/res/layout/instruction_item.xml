<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/instruction_item">

    <TextView
        android:id="@+id/instruction_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schritt"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium" />

    <!-- Horizontal Layout fÃ¼r Bild und Text nebeneinander -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/instruction_desc_half"
            android:layout_width="0dp"
            android:paddingTop="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hier sollte das Rezept stehen..."
            android:textSize="16sp"
            android:gravity="start"
            android:paddingEnd="2dp"
            />

        <ImageView
            android:id="@+id/instruction_image"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars[3]" />
    </LinearLayout>

    <!-- TextView unterhalb des Bildes, die die gesamte Breite einnimmt -->
    <TextView
        android:id="@+id/instruction_desc_full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hier sollte das Rezept stehen..."
        android:textSize="16sp"
        android:gravity="start" />

</LinearLayout>
