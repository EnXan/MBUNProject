<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/edit_text_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="150dp"
        android:text="Select Quantity"
        android:textAlignment="center"
        android:textSize="14sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Value Picker -->
        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/wheel_picker_value"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            app:wheel_item_align="center"
            app:wheel_maximum_width_text="abcdefghijk"
            app:wheel_curtain="true"
            app:wheel_curtain_color="@color/shadow_black_translucent"
            app:wheel_visible_item_count="6"
            app:wheel_curved="true"
            app:wheel_item_text_size="18sp"
            app:wheel_atmospheric="true"
            android:background="@android:color/transparent" />

        <!-- Grams Picker -->
        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/wheel_picker_grams"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            app:wheel_item_align="center"
            app:wheel_maximum_width_text="abcdef"
            app:wheel_curtain="true"
            app:wheel_curtain_color="@color/shadow_black_translucent"
            app:wheel_visible_item_count="6"
            app:wheel_item_text_size="18sp"
            app:wheel_curved="true"
            app:wheel_atmospheric="true"
            android:background="@android:color/transparent"
            android:visibility="gone" />

        <!-- Unit Picker -->
        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/wheel_picker_unit"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            app:wheel_item_align="center"
            app:wheel_maximum_width_text="abcdefghijk"
            app:wheel_curtain="true"
            app:wheel_item_text_size="18sp"
            app:wheel_curtain_color="@color/shadow_black_translucent"
            app:wheel_visible_item_count="6"
            app:wheel_curved="true"
            app:wheel_atmospheric="true"
            android:background="@android:color/transparent" />
    </LinearLayout>
</LinearLayout>
